<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

     <record id="view_account_invoice_report_search_inherit_so_project" model="ir.ui.view">
            <field name="name">account.invoice.report.search.inherit</field>
            <field name="model">account.invoice.report</field>
            <field name="inherit_id" ref="account.view_account_invoice_report_search"/>
            <field name="arch" type="xml">
                <xpath expr="//group/filter[@name='user']" position="after">
                    <filter string="Customer group" name="customer_group" domain="[]" context="{'group_by':'customer_group_id'}"/>
                </xpath>
                <xpath expr="//field[@name='invoice_user_id']" position="after">
                    <field name="customer_group_id"/>
                </xpath>
            </field>
        </record>

</odoo>